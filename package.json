{
  "name": "safewrite-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["client", "server", "detector", "agents"],
  "scripts": {
    "dev": "concurrently -n client,server,detector,agents -c blue,green,yellow,magenta \"npm run dev -w client\" \"npm run dev -w server\" \"npm run dev -w detector\" \"npm run dev -w agents\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev:detector": "npm run dev -w detector",
    "dev:agents": "npm run dev -w agents",
    "build": "npm run build -w client",
    "test": "npm test --workspaces --if-present",
    "test:detector": "npm test -w detector",
    "test:server": "npm test -w server"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
